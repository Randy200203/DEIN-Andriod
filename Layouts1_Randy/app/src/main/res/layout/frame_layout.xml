<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/button_Superior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:backgroundTint="@color/design_default_color_error"
            android:gravity="center"
            android:text="Botón Superior"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_Centro_Derecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:backgroundTint="?attr/colorOnErrorContainer"
            android:gravity="center"
            android:text="Botón Centro Derecha"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_Inferior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:backgroundTintMode="add"
            android:gravity="left"
            android:text="Botón Inferior"
            android:textSize="34sp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>